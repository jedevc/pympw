#!/bin/bash

###
# Simple tool to insert an mpw password anywhere.

WINDOW=`xdotool getactivewindow`

echo -n | xsel -bi

xterm -T 'MasterPassword' -e '
read -p "Name: " name
read -p "Site: " site
read -p "Template (long): " template
template=${template:-long}
read -p "Counter (1): " counter
counter=${counter:-1}
mpw $name $site -t $template -c $counter -x
if [ $? -ne 0 ]; then read; fi
'

xdotool windowactivate $WINDOW key 'ctrl+shift+v'
